extends ../layout

block content
  .container.contentTop
    .row
      .panel.panel-default
        .panel-heading 
          h4 #{keyword}
        .panel-body
          if medias && medias.length > 0
            each item in medias
              .col-md-2.text-center
                .thumbnail
                  a(href="/media/#{item._id}")
                    img(src="/upload/#{item.thumbnail}", alt="#{item.name}", width="150px", height="170px")
                  .caption
                    h4 #{item.name}
                    p: a.btn.btn-primary(href="#{item.showUrl}", role="button" target="_blank") 查看在线
      ul.pagination
        - for (var i = 0; i < totalPage; i++) {
          - if (currentPage == (i + 1)) {
              li.active
                span #{currentPage} 
            - }
          - else {
              li
                a(href='/results?#{query}&p=#{i}') #{i+1}
            - } 
        - }
