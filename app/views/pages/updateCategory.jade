extends ../layout

block content
	.container.contentTop
		.row
			form.form-horizontal(method="post" action="/admin/updateCategory/#{category._id}" )
				.form-group
					label.col-sm-2.control-label(for="inputCategory") 内容分类
					.col-sm-10
						input#inputCategory.form-control(type="text", name="categoryName",value="#{category.name}")
				.form-group
					.col-sm-offset-2.col-sm-10
						button.btn.btn-primary(type="submit") 录入 